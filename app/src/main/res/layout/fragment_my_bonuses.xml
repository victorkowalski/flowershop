<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView android:text="@string/in_your_account"
                  android:textAlignment="center"
                  android:layout_marginTop="20dp"
                  android:textSize="16sp"
                  android:textFontWeight="500"
                  android:textColor="@color/mainTextColor"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  tools:targetApi="p"/>


        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="wrap_content">

            <ProgressBar android:id="@+id/progress_indicator"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:indeterminate="true"/>

            <TextView android:id="@+id/tv_bonuses"
                      tools:text="3480"
                      android:visibility="invisible"
                      android:layout_marginBottom="0dp"
                      android:layout_marginTop="0dp"
                      android:textAlignment="center"
                      android:layout_gravity="center"
                      android:textSize="48sp"
                      android:textColor="@color/mainTextColor"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>

        </FrameLayout>

        <TextView android:text="@string/points"
                  android:textAlignment="center"
                  android:textSize="15sp"
                  android:textColor="@color/mainTextColor"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginTop="30dp"
              android:background="@color/separatorColor"/>

        <LinearLayout android:orientation="vertical"
                      android:layout_gravity="center_horizontal"
                      android:layout_width="250dp"
                      android:layout_height="wrap_content">

            <Button android:id="@+id/get_more_bonuses"
                    android:text="@string/get_more_bonuses"
                    android:background="@drawable/button_background_invert"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="0dp"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <Button android:id="@+id/spend_bonuses"
                    android:text="@string/spend_bonuses"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>